{
  "name": "my-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "deno run -A npm:@remix-run/dev vite:build",
    "deploy": "deployctl deploy --prod --include=deno.json,deno.lock,build,package.json,server --project=polarzero-nightwatch ./server.production.ts",
    "dev": "deno run -A npm:@remix-run/dev vite:dev",
    "format": "deno fmt",
    "lint": "deno lint && deno run -A npm:eslint .",
    "start": "deno serve -A --parallel ./server.production.ts",
    "typecheck": "deno check --node-modules-dir=auto '**/*'"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@remix-run/deno": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@remix-run/server-runtime": "^2.16.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^4.1.0",
    "lucide-react": "^0.488.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@remix-run/dev": "^2.16.5",
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/vite": "^4.1.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
